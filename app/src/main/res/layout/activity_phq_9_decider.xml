<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allBackground"
    tools:context=".Phq_9DeciderActivity">


    <TextView
        android:id="@+id/phq9_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unfortunately, we found that you have some depressive indications. Plase take the PHQ9 test."
        app:layout_constraintBottom_toTopOf="@+id/phq9_test_open"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#70ADB5"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/phq9_test_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHQ_9 Test"
        android:background="@drawable/rounded_blue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>